<Window x:Class="OneDollarUnistroke.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneDollarUnistroke"
        mc:Ignorable="d"
        Title="Stroke Recognizer" Height="350" Width="675">
    <StackPanel Orientation="Horizontal">
        <InkCanvas Name="mainCanvas" MouseLeftButtonUp="LeftMouseUpHandler" Width="525"/>
        <Line X1="0" X2="0" Y1="0" Y2="350" Stroke="Black" StrokeThickness="5"/>
        <Canvas Name="sideCanvas"  Width="145"/>
    </StackPanel>
</Window>